# Core service configuration
QUEUE_PORT=7000
API_PORT=8080
RAG_PORT=8000

# Service URLs (inside docker network)
OLLAMA_URL=http://ollama:11434
QUEUE_URL=http://queue:${QUEUE_PORT}
RAG_URL=http://rag-agent:${RAG_PORT}

# Dashboard
DASHBOARD_PORT=3000
# Comma-separated agent names for dashboard controls
AGENTS=rag
# Average seconds per job (for ETA calc in dashboard)
AVG_JOB_SECONDS=30
# Optional JSON mapping of agent metadata (icon/description)
# Example: {"rag":{"icon":"ðŸ§ ","description":"Retrieval Augmented Generation"}}
# Use a single line. If you include quotes, escape them properly in your shell.
AGENT_META=

# RAG configuration
RAG_DB_PATH=/data/rag_db
RAG_COLLECTION=local_knowledge
RAG_EMBED_MODEL=bge-m3
RAG_LLM_MODEL=mistral
